# Template file for 'vostok-mirrorlist'
pkgname=vostok-mirrorlist
version=1.0
revision=1
archs="x86_64"
#metapackage=yes
short_desc="Vostok Linux repository"
maintainer="Vostok Linux <team@vostoklinux.org>"
license="Public Domain"
homepage="https://vostoklinux.org"

do_install() {
    # Создаем папку в /etc/xbps.d
    vmkdir etc/xbps.d
    # Копируем конфиг из папки files в систему
    vinstall ${FILESDIR}/vostok-repo.conf 644 etc/xbps.d

    # Ключ доверия
    vmkdir var/db/xbps/keys
    vinstall ${FILESDIR}/var/db/xbps/keys/vostok-repo.pub 644 var/db/xbps/keys
}

post_install() {
    echo "========================================"
    echo "VOSTOK LINUX REPOSITORY CONFIGURED!"
    echo "========================================"
    echo "Priority cascade:"
    echo "1. Vostok repo (priority=100)"
    echo "2. Void main repo (priority=10)"
    echo "3. Void multilib (priority=10)"
    echo ""
    echo "Config: /etc/xbps.d/vostok-repo.conf"
    echo "========================================"
}
